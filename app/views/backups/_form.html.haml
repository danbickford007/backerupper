= form_for @backup do |f|
  - if @backup.errors.any?
    #error_explanation
      %h2= "#{pluralize(@backup.errors.count, "error")} prohibited this backup from being saved:"
      %ul
        - @backup.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
